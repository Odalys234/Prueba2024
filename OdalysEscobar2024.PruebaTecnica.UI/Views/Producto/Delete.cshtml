@model OdalysEscobar2024.PruebaTecnica.EN.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}
<div class="container">

    <h1>Eliminar Producto</h1>

    <h3>¿Seguro que deseas eliminar este registro?</h3>
    <div>
        <h4>Información del Producto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categorias.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categorias.Nombre)
            </dd>
        </dl>

        <form asp-action="Deletet" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>
