@model OdalysEscobar2024.PruebaTecnica.EN.Producto

@{
    ViewData["Title"] = "Detalles de Producto";
}

<div class="container mt-4">
    <h1>Detalles del Producto</h1>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">ID Categoría</dt>
        <dd class="col-sm-10">@Model.IdCategoria</dd>
    </dl>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
