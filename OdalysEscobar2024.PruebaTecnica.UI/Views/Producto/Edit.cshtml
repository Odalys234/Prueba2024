@model OdalysEscobar2024.PruebaTecnica.EN.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <h1>Editar Producto</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio">Precio</label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdCategoria">ID Categoría</label>
            <input asp-for="IdCategoria" class="form-control" type="number" />
            <span asp-validation-for="IdCategoria" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>
